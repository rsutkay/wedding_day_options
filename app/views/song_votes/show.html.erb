<div class="page-header">
  <h3>Song Vote #<%= @song_vote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @song_vote.user.present? %>
          <a href="/users/<%= @song_vote.user_id %>">
            <%= @song_vote.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Song</dt>
      <dd>
        <% if @song_vote.song.present? %>
          <a href="/songs/<%= @song_vote.song_id %>">
            <%= @song_vote.song.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/song_votes" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @song_vote.user %>
        <a href="/song_votes/<%= @song_vote.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_song_vote/<%= @song_vote.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
