<div class="page-header">
  <h3>Drink Vote #<%= @drink_vote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @drink_vote.user.present? %>
          <a href="/users/<%= @drink_vote.user_id %>">
            <%= @drink_vote.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Drink</dt>
      <dd>
        <% if @drink_vote.drink.present? %>
          <a href="/drinks/<%= @drink_vote.drink_id %>">
            <%= @drink_vote.drink.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/drink_leaderboard" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @drink_vote.user %>
        <a href="/drink_votes/<%= @drink_vote.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_drink_vote/<%= @drink_vote.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
