<!-- Validation failure messages -->
<% if @bus.errors.any? %>
  <% @bus.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Do you need to cancel your bus choice?</h3>
</div>

<div class="row">
  <!--<a href="/buses/new" class="btn btn-lg btn-success">Yes</a>-->
  <form action="/create_bus" method="post">
    <a href="/" class="btn btn-lg btn-danger">Cancel</a>
  </form>
  <div class="col-md-12">
    <form action="/update_bus/<%= @bus.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for need -->
      <!--<div class="checkbox">-->
      <!--  <label for="need">-->
          <input type="hidden" id="need" name="need" value="1" <%= "checked" if @bus.need %>>
      <!--    Need-->
      <!--  </label>-->
      <!--</div>-->

      
      

      <!-- Label and input for passengers -->
      <div class="form-group">
        <label for="passengers" class="control-label">
          Bus Passengers
        </label>

        <input type="text" id="passengers" name="passengers" placeholder="Bus Passengers" class="form-control" value="<%= @bus.passengers %>">
      </div>

      <button class="btn btn-warning">
        Update Bus
      </button>
      or
      <a href="/buses/<%= @bus.id %>">Cancel</a>
    </form>
  </div>
</div>
