<div class="page-header">
  <h1>
    Buses
    <a href="/buses/new" class="btn btn-lg btn-success">New Bus</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Need</th>
        <th>User</th>
        <th>Passengers</th>
        <th>Actions</th>
      </tr>

      <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.need %></td>
        <td><%= bus.user_id %></td>
        <td><%= bus.passengers %></td>
        <td>
          <a href="/buses/<%= bus.id %>" class="btn btn-primary">Show</a>
          <a href="/buses/<%= bus.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bus/<%= bus.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
