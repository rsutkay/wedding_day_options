<div class="page-header">
  <h3>Bus #<%= @bus.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Need</dt>
      <dd><%= @bus.need %></dd>

      <dt>User</dt>
      <dd><%= @bus.user_id %></dd>

      <dt>Passengers</dt>
      <dd><%= @bus.passengers %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/buses" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @bus.user %>
        <a href="/buses/<%= @bus.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_bus/<%= @bus.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
