<div class="page-header">
  <h1>
    Drinks
    <a href="/drinks/new" class="btn btn-lg btn-success">New Drink</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @drinks.each do |drink| %>
      <tr>
        <td><%= drink.name %></td>
        <td>
          <% if drink.category.present? %>
            <a href="/categories/<%= drink.category.id %>">
              <%= drink.category.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if drink.user.present? %>
            <a href="/users/<%= drink.user.id %>">
              <%= drink.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/drinks/<%= drink.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == drink.user %>
            <a href="/drinks/<%= drink.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_drink/<%= drink.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @drinks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
